<style>
  img {
    max-width: 200px;
    height: auto;
  }
  table {
    border-collapse: collapse;
  }
  tr:nth-child(even) {
    background: #efefef;
  }
  th:not(.no-border) {
    background: #333;
    color: #fff;
    border-bottom: 1px solid #555;
  }
  th, td {
    padding: 1em;
    vertical-align: top;
    text-align: left;
  }
  td:nth-child(2) {
    max-width: 28em;
  }
  .crud-menu {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 1em;
  }
</style>
<p id="notice"><%= notice %></p>

<h1>Adventures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Location</th>
      <th>Visit</th>
      <th class="no-border"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= adventure.name %></td>
        <td><%= adventure.description %></td>
        <td><img src="<%= adventure.picture %>" alt="<%= adventure.name %>" /></td>
        <td><%= adventure.location %></td>
        <td><%= adventure.visit %></td>
        <td class="crud-menu">
          <%= link_to 'Show', adventure %>
          <%= link_to 'Edit', edit_adventure_path(adventure) %>
          <%= link_to 'Destroy', adventure, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adventure', new_adventure_path %>
